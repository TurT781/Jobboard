{% extends 'base.html.twig' %}

{% block title %}Applications index{% endblock %}

{% block body %}
    <h1>Applications index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Phone_number</th>
                <th>Email</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for application in applications %}
            <tr>
                <td>{{ application.id }}</td>
                <td>{{ application.firstName }}</td>
                <td>{{ application.lastName }}</td>
                <td>{{ application.phoneNumber }}</td>
                <td>{{ application.email }}</td>
                <td>
                    <a href="{{ path('app_applications_show', {'id': application.id}) }}">show</a>
                    <a href="{{ path('app_applications_edit', {'id': application.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_applications_new') }}">Create new</a>
{% endblock %}
